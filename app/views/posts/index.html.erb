<p id="notice"><%= notice %></p>
<h1 class="font-semibold text-4xl text-gray-700 my-8">Posts</h1>
<div class="w-full xl:w-8/12 mb-12 xl:mb-0 px-4">
  <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded">
    <table class="items-center w-full bg-transparent border-collapse">
      <thead>
        <tr>
          <th class="table-header">Title</th>
          <th class="table-header">Content</th>
          <th class="table-header", colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="table-content"><%= post.title %></td>
            <td class="table-content"><%= post.content %></td>
            <td class="table-content"><%= link_to 'Show', post %></td>
            <td class="table-content"><%= link_to 'Edit', edit_post_path(post) %></td>
            <td class="table-content"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'New Post', new_post_path %>
